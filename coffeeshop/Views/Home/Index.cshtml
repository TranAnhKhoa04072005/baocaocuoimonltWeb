@model IEnumerable<coffeeshop.Models.Product>

<section data-bs-version="5.1" class="header18 cid-tsEQyIZRcx mbr-fullscreen mbr-parallax-background"
         id="header18-1">
    <div class="mbr-overlay"
         style="opacity:0.9; background-image: image();">
    </div>
    <div class="mbr-overlay" style="opacity: 0.7; background-color: #4a71de;"></div>
    <div class="align-center container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <h1 class="mbr-section-title mbr-fonts-style mbr-white mb-3 display-1">
                    <strong>
                        Giảm ngay 30% khi đăng ký hội viên
                    </strong>
                </h1>

                <p class="mbr-text mbr-fonts-style mbr-white display-7">
                    Tham quan shop
                </p>
                <div class="mbr-section-btn mt-3">
                    <a class="btn btn-primary display-4" asp-controller="Product" asp-action="Shop">
                        <span class="mobi-mbri mobi-mbri-shopping-bag mbr-iconfont mbr-iconfont-btn"></span>Shop
                        now&nbsp;
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section data-bs-version="5.1" class="content2 cid-tsEQSCqggh" id="content2-2">
    <div class="container">
        <div class="mbr-section-head">
            <h4 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                <strong>top tìm kiếm</strong>
            </h4>
            
        </div>
        <div class="row mt-4">
            @foreach (var item in Model)
            {
                <div class="iten features-image col- col-md-6 col-lg-4">
                    <div class="iten-wrapper">
                        <div class="iten-ing">
                            <img src="~/assets/images/product-1.jpg" alt="Coffee Shop" title="">
                        </div>
                        <div class="item-content">
                            <h6 class="item-subtitle abr-fonts-style st-1 display-7">
                                <strong>Đề THPT 2025</strong>
                            </h6>
                            <p class="abr-text abr-fonts-style mt-3 display-7">@item.Price.ToString("c")</p>
                        </div>
                        <div class="abr-section-btn item-footer st-2">
                            <a asp-controller="Shoppingcart" asp-action="AddToShoppingCart" asp-route-pId="@item.Id" class="btn item-btn btn-primary display-4" target="self">
                                <span class="abrib-cart-add abr-iconfont mbr-iconfont-btn"></span>Add to cart
                            </a>

                           
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</section>